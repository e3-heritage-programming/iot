# Routes
# This file defines all application routes (Higher priority routes first) controllers.Application.commodity()
# ~~~~

# Home page
GET        /                             controllers.Application.index()
GET        /webServiceExampleData        controllers.Application.consumeExternalWebserviceData()
GET        /commoditiesRender            controllers.Application.consumeExternalWebserviceRender()
GET        /weatherRender                controllers.WeatherController.consumeWeatherRender()


# RESTful Service
GET        /Weather/Pos                  controllers.WeatherController.getWeatherByLatLong(latitude: String, longitude: String)
GET        /Weather/Id                   controllers.WeatherController.getWeatherById(id: Integer)

# Calls Remote Service that returns all commodity names.
GET        /Commodities                  controllers.Application.getRemoteCommodities()

# Return specific commodity information
GET        /Commodities/Id               controllers.Application.getRemoteCommodity(id: Integer)

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file                 controllers.Assets.at(path="/public", file)
