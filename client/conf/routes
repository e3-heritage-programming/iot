# Routes
# This file defines all application routes (Higher priority routes first) controllers.ApplicationControllerController.commodity()
# ~~~~

# Home page
GET        /                             controllers.ApplicationController.getHome()
GET        /webServiceExampleData        controllers.ApplicationController.consumeExternalWebserviceData()
GET        /commodities                  controllers.CommoditiesController.getCommodities()
GET        /weather                      controllers.WeatherController.getWeather()


# RESTful Service
GET        /Weather/Pos                  controllers.WeatherController.getWeatherByLatLong(latitude: String, longitude: String)
GET        /Weather/Id                   controllers.WeatherController.getWeatherById(id: Integer)
GET        /Locations/Add                controllers.WeatherController.getAddLocation(name: String)

# Calls Remote Service that returns all commodity names.
GET        /Commodities                  controllers.CommoditiesController.getRemoteCommodities()

# Return specific commodity information
GET        /Commodities/Id               controllers.CommoditiesController.getRemoteCommodity(id: Integer)

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file                 controllers.Assets.at(path="/public", file)
