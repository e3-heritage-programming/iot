# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                      controllers.Application.index()

# RESTful Service
# Returns all commodity names.
GET        /Commodities           controllers.Application.getCommodities()
# Return specific commodity information
GET        /Commodities/Id        controllers.Application.getCommodity(id: Integer)

GET        /Weather/Id            controllers.Application.getWeatherById(id: Integer)
GET        /Weather/Pos           controllers.Application.getWeatherByLatLong(longitude: String, latitude: String)

# Returns all location names.
GET        /Locations             controllers.Application.getLocations()